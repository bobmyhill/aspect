# A simple test that checks the temperature initialization
# in a 2D chunk geometry. Sets a harmonic perturbation to
# the temperature field, and lower and upper temperature
# boundary conditions.

set Dimension = 2
set CFL number                             = 1.0
set End time                               = 1e9
set Start time                             = 0
set Adiabatic surface temperature          = 1600.0
set Surface pressure                       = 0
set Use years in output instead of seconds = true
set Nonlinear solver scheme                = IMPES



subsection Gravity model
  set Model name = radial constant

  subsection Radial constant
    set Magnitude = 10
  end
end


subsection Geometry model
  set Model name = chunk

  subsection Chunk
    set Chunk minimum longitude = 60
    set Chunk maximum longitude = 120
    set Longitude repetitions = 5
    set Chunk inner radius = 3000000
    set Chunk outer radius = 6000000
    set Radius repetitions = 5
  end
end


subsection Initial conditions
  set Model name = adiabatic
  subsection Adiabatic
    set Radius = 400000.0
    set Amplitude = 20
  end
end

subsection Boundary temperature model
  set Model name = initial temperature
end

subsection Material model
  set Model name = simple
  subsection Simple model
    set Reference density = 3340
    set Reference specific heat = 1200
    set Thermal expansion coefficient = 3e-5
    set Viscosity = 1e21
  end
end

subsection Mesh refinement
  set Initial adaptive refinement        = 2
  set Initial global refinement          = 4
  set Time steps between mesh refinement = 0
end

subsection Model settings
  set Fixed temperature boundary indicators   = inner, outer, west, east
  set Prescribed traction boundary indicators = west : adiabatic pressure, east : adiabatic pressure
  set Prescribed velocity boundary indicators =
  set Tangential velocity boundary indicators = outer,inner
  set Zero velocity boundary indicators       =
end

subsection Postprocess
  set List of postprocessors = visualization, velocity statistics, basic statistics,  temperature statistics, heat flux statistics
  subsection Visualization
    set List of output variables      = nonadiabatic pressure, density

    # VTU file output supports grouping files from several CPUs into one file
    # using MPI I/O when writing on a parallel filesystem. Select 0 for no
    # grouping. This will disable parallel file output and instead write one
    # file per processor in a background thread. A value of 1 will generate
    # one big file containing the whole solution.
    set Number of grouped files       = 0

    # The file format to be used for graphical output.
    set Output format                 = vtu

    # The time interval between each generation of graphical output ffunctioniles. A
    # value of zero indicates that output should be generated in each time
    # step. Units: years if the 'Use years in output instead of seconds'
    # parameter is set; seconds otherwise.
    set Time between graphical output = 0   # default: 1e8
  end
end
